---
// Página principal del portafolio
// Aquí se importan y organizan todos los componentes
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import About from '../components/About.astro';
import Technologies from '../components/Technologies.astro';
import Projects from '../components/Projects.astro';
import Contact from '../components/Contact.astro';
import Footer from '../components/Footer.astro';
---

<!-- 
  La página principal del portafolio utiliza el layout base
  y renderiza todos los componentes en el orden correcto
-->
<Layout title="Juan Miguel Díaz Peláez - Portafolio Personal">
	<!-- Header fijo con navegación -->
	<Header />
	
	<!-- Sección principal de bienvenida -->
	<Hero />
	
	<!-- Información personal detallada -->
	<About />
	
	<!-- Tecnologías que estoy aprendiendo -->
	<Technologies />
	
	<!-- Proyectos realizados y en planeación -->
	<Projects />
	
	<!-- Formulario de contacto -->
	<Contact />
	
	<!-- Pie de página -->
	<Footer />
</Layout>

<!-- Estilos globales adicionales para la página -->
<style>
	/* Scroll offset para compensar el header fijo */
	html {
		scroll-padding-top: 80px;
	}
	
	/* Animaciones suaves para elementos que aparecen */
	section {
		opacity: 0;
		transform: translateY(20px);
		animation: fadeInUp 0.6s ease forwards;
	}
	
	/* Retraso progresivo para crear efecto cascada */
	#sobre-mi {
		animation-delay: 0.1s;
	}
	
	#tecnologias {
		animation-delay: 0.2s;
	}
	
	#proyectos {
		animation-delay: 0.3s;
	}
	
	#contacto {
		animation-delay: 0.4s;
	}
	
	@keyframes fadeInUp {
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}
	
	/* Mejoras de accesibilidad */
	@media (prefers-reduced-motion: reduce) {
		/* Desactiva animaciones para usuarios que prefieren menos movimiento */
		*,
		*::before,
		*::after {
			animation-duration: 0.01ms !important;
			animation-iteration-count: 1 !important;
			transition-duration: 0.01ms !important;
		}
	}
</style>