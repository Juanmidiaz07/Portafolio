	}

	.footer-links a {
		color: #d1d5db;
		text-decoration: none;
		transition: color 0.3s ease;
	}

	.footer-links a:hover {
		color: #fbbf24;
	}

	.social-links {
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
	}

	.social-link {
		color: #d1d5db;
		text-decoration: none;
		display: flex;
		align-items: center;
		gap: 0.5rem;
