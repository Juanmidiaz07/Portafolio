---
// Componente del header/navegación principal
// Este componente se renderiza en la parte superior de la página
---

<header class="header">
	<div class="container">
		<!-- Logo/Nombre personal -->
		<div class="logo">
			<h1>Juan Miguel</h1>
			<span>Programador Junior</span>
		</div>
		
		<!-- Navegación principal -->
		<nav class="nav">
			<ul>
				<li><a href="#sobre-mi">Sobre mí</a></li>
				<li><a href="#tecnologias">Tecnologías</a></li>
				<li><a href="#proyectos">Proyectos</a></li>
				<li><a href="#contacto">Contacto</a></li>
			</ul>
		</nav>
	</div>
</header>

<style>
	.header {
		/* Posición fija para que siempre esté visible */
		position: fixed;
		top: 0;
		left: 0;
		right: 0;
		z-index: 1000;
		/* Fondo con transparencia y efecto blur */
		background: rgba(255, 255, 255, 0.95);
		backdrop-filter: blur(10px);
		border-bottom: 1px solid rgba(0, 0, 0, 0.1);
		padding: 1rem 0;
		/* Transición suave */
		transition: all 0.3s ease;
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 2rem;
		display: flex;
		justify-content: space-between;
		align-items: center;
	}

	.logo h1 {
		font-size: 1.5rem;
		font-weight: 700;
		color: #2563eb;
		margin-bottom: 0.25rem;
	}

	.logo span {
		font-size: 0.85rem;
		color: #6b7280;
		font-weight: 500;
	}

	.nav ul {
		display: flex;
		list-style: none;
		gap: 2rem;
	}

	.nav a {
		text-decoration: none;
		color: #374151;
		font-weight: 500;
		transition: color 0.3s ease;
		position: relative;
	}

	/* Efecto hover para los links de navegación */
	.nav a:hover {
		color: #2563eb;
	}

	/* Línea decorativa que aparece al hacer hover */
	.nav a::after {
		content: '';
		position: absolute;
		bottom: -5px;
		left: 0;
		width: 0;
		height: 2px;
		background: #2563eb;
		transition: width 0.3s ease;
	}

	.nav a:hover::after {
		width: 100%;
	}

	/* Responsive design para móviles */
	@media (max-width: 768px) {
		.container {
			padding: 0 1rem;
		}
		
		.nav ul {
			gap: 1rem;
		}
		
		.nav a {
			font-size: 0.9rem;
		}
	}
</style>